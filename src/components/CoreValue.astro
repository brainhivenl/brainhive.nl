---
const { title, image } = Astro.props;
const Image = image;
---

<div class="flex flex-row">
  <div class="w-20 2xl:w-24 self-start">
    <Image />
  </div>

  <div class="ml-5">
    <h5 class="font-bold text-xl md:text-2xl text-gray-700 text-[#3a4f7e] mb-2">
      {title}
    </h5>
    <div class="text-lg md:text-xl text-gray-600 leading-relaxed">
      <slot />
    </div>
  </div>
</div>
